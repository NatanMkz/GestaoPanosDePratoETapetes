<Page x:Class="GestaoPanosDePratoETapetes.View.ToalhaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestaoPanosDePratoETapetes.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToalhaPage">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <!--menu geral-->
                <RowDefinition  Height="60"/>
                <!--Filtros tela-->
                <RowDefinition />
                <!--DataGrid-->
            </Grid.RowDefinitions>
            <Grid Grid.Row="1"  x:Name="filtrosToalhas">

            </Grid>
            <DataGrid Grid.Row="2" Name="dtgToalhas" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome" IsReadOnly="True"  Width="Auto" Binding="{Binding Nome}"  />
                    <!--Fazer um  DataGridTextColumn para cada propriedade do PanoPrato-->
                </DataGrid.Columns>

            </DataGrid>
        </Grid>

    </Grid>
</Page>
